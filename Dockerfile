FROM node:8

ARG DB_PORT
ENV DB_PORT $DB_PORT

ARG DB_USERNAME
ENV DB_USERNAME $DB_USERNAME

ARG DB_PASSWORD
ENV DB_PASSWORD $DB_PASSWORD

ARG DB_HOST
ENV DB_HOST $DB_HOST

ARG DB_NAME
ENV DB_NAME $DB_NAME

ARG DB_PORT
ENV DB_PORT $DB_PORT

ARG TOKEN_GRAVEYARD_ADDRESS
ENV TOKEN_GRAVEYARD_ADDRESS $TOKEN_GRAVEYARD_ADDRESS

COPY package*.json ./

RUN npm install

COPY . .

EXPOSE 8010

CMD ["sh", "execute.sh"]
